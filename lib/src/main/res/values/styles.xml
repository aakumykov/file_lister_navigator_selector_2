<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="flns_error_view" parent="flns_info_text_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/error_view_bg</item>
        <item name="android:textColor">@color/error_view_fg</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="flns_info_text_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="flns_dialog_header_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/design_default_color_primary</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>